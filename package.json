{
  "name": "pumpfun-bonding-curve",
  "version": "1.0.0",
  "description": "Educational bonding curve implementation for Solana tokens",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node bonding-curve-cli/index.ts",
    "create-token": "ts-node bonding-curve-cli/create-token.ts",
    "buy-tokens": "ts-node bonding-curve-cli/buy-tokens.ts",
    "sell-tokens": "ts-node bonding-curve-cli/sell-tokens.ts",
    "pumpfun:create": "cd pumpfun && npm run create-token",
    "pumpfun:dev": "cd pumpfun && npm run dev",
    "pumpfun:build": "cd pumpfun && npm run build",
    "pumpfun:example": "cd pumpfun && npm run example",
    "lint:fix": "prettier bonding-curve-cli/**/*.ts -w",
    "lint": "prettier bonding-curve-cli/**/*.ts --check",
    "test": "cd bonding-curve-program && ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.ts",
    "anchor:build": "cd bonding-curve-program && anchor build",
    "anchor:test": "cd bonding-curve-program && anchor test",
    "set-program-id": "cd bonding-curve-program && ./scripts/set-program-id.sh"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/kit": "^2.3.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.4",
    "borsh": "^2.0.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^22.10.4",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/pumpfun-bonding-curve.git"
  },
  "keywords": [
    "solana",
    "bonding-curve",
    "defi",
    "spl-token",
    "pump-fun",
    "educational"
  ],
  "author": "Your Name"
}
